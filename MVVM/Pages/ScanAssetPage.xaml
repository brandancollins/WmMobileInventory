<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WmMobileInventory.MVVM.Pages.ScanAssetPage"
             Title="ScanAssetPage">
    <VerticalStackLayout Padding="20">
        <Label Text="" Margin="15" />
        <Entry Placeholder="Scan or Enter Barcode" 
            Text="{Binding Barcode, Mode=TwoWay}" ReturnCommand="{Binding GetAssetByBarcodeCommand}"  />

        <Button Text="Lookup" BackgroundColor="{StaticResource WMGreen}"
             TextColor="{StaticResource WMSpiritGold}" FontSize="Large"
             Command="{Binding GetAssetByBarcodeCommand}" />

        <!-- Display asset details -->
        <Label Text="{Binding Asset.Ptag}" />
        <Label Text="{Binding Asset.BuildingLocation}" />
        <Label Text="{Binding Asset.Room}" />
        <Label Text="{Binding Asset.AssetDescription}" />
        <!-- Add more labels for other Asset properties as needed -->
    </VerticalStackLayout>
</ContentPage>